<h2><%= @article.title %></h2>

<%= render partial: 'articles/writtenby' %>

<div class="article-body"><%= simple_format(@article.content) %></div>
<div class="ui divider"></div>

<div>
    Comments
    <ul>
        <% if @comments.any? %>
            <% @comments.each do |comment| %>
                <li>
                    <%= comment.content %>
                     â€“ <%= link_to comment.user.username, user_path(comment.user) %>
                    <% if can_edit_delete?(comment.user) %>
                        (
                        <%= link_to 'Edit', groupcomment_edit_path(comment.group_article.group.name, group_comment_id: comment.id) %>
                        | 
                        <%= link_to 'Delete', groupcomment_edit_path(comment.group_article.group.name, group_comment_id: comment.id), 
                            method: :delete, group_article_id: @article.id,
                            data: { confirm: 'Are you sure you want to delete this comment? This action cannot be undone.' } %>
                        )
                    <% end %>
                </li>
            <% end %>
        <% else %>
            <p>No comments yet. Why don't you be the first to comment?</p>
        <% end %>
    </ul>
</div>

<div class="ui divider"></div>

<%= render partial: 'group_comments/form' %>

<% if can_edit_delete?(@user) %>
    <div class="ui divider"></div>
    <%= button_to "Edit this article", group_article_edit_path(@article.group.name, @article.title),
        :class=>"ui button blue", method: :get, params: {action: 'edit'} %>
    <br>
    <%= button_to "Delete this article", group_article_path(@article.group.name, @article.title),
        :class=>"ui button red", method: :delete,
        data: { confirm: 'Are you sure you want to delete this article? This action cannot be undone.' } %>
<% end %>