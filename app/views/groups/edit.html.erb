<h1>Edit Group</h1>
<p>Edit your group as you see fit.</p>

<%= render 'shared/errors', obj: @group %>

<%= form_for(@group, url: group_edit_path(@group.name, group_id: @group.id)) do |g| %>
    <div class="ui form">
        <div class="field">
            <%= g.label :name %>
            <%= g.text_field :name, :placeholder=>"Give your group an easily recognizable name." %>
        </div>
        <div class="field">
            <%= g.label :description %>
            <%= g.text_area :description, :size=>"60x3", :placeholder=>"Let others know what your group is about." %>
        </div>
        <div class="field">
            <%= g.label :item_name, 'Counter for posts' %>
            <p>The term used to refer to posts made in the group. The default is "Article".</p>
            <%= g.text_field :item_name, :value=>"Article", :placeholder=>'If blank, this will default to "Article"' %>
        </div>

        <br>

        <div class="field">
            <%= g.label :users, 'Friends to Include' %>
            <div class="ui divider"></div>
            <% if @friends %>
                <% @friends.each do |f| %>
                    <div class="ui toggle checkbox">
                        <%= check_box_tag 'friends[]', f.username, checked = (@group.users.find_by(id: f.id)) %>
                        <label><%= f.username %></label>
                    </div>
                    <div class="ui divider"></div>
                <% end %>
            <% end %>
        </div>
        
        <br>

        <div class="field">
            <%= g.button "Update Group", :class=>"ui button blue", method: :patch %>
        </div>
    </div>
<% end %>
