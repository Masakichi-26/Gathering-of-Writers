<h1>Find a User</h1>

<%= form_tag(users_search_path, :method => 'get') do %>
    <div class="ui fluid category search">
        <div class="ui icon input">
            <%= text_field_tag :search, params[:search], placeholder: "Enter username", autofocus: true %>
        </div>
            <%= submit_tag 'Search', :name => nil, :class => "ui button green" %>
    </div>
<% end %>

<div class="ui segment">
    <% if @search_blank %>
        Displaying all users
    <% else %>
        Displaying users that match "<%= params[:search] %>"
    <% end %>
</div>

<%= render 'userlist', obj: @users %>


