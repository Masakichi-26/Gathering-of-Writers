<h1>User Login</h1>
<p>Enter your email and password to sign in.</p>

<%= form_for(:session, url: login_path) do |f| %>
    <div class="field">
        <%= f.label :email %>
        <%= f.email_field :email %>
    </div>

    <div class="field">
        <%= f.label :password %>
        <%= f.password_field :password %>
    </div>

    <div class="field">
    <%=     f.button 'Login', :class=>"ui blue button" %>
    </div>

<% end %>

<p>Need to sign up first? <%= link_to "You can do that here.", users_new_path %></p>